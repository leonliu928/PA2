<h2>All Movies</h2>

<%= form_tag movies_path, :id => "ratings_form", :method => :get do %>
  Include:
  <%- @all_ratings.each do |rating| %>
    <%= rating %>
    <%= check_box_tag "ratings[#{rating}]", :id => "ratings_#{rating}" %>
  <% end %>
  <%= submit_tag 'Refresh', :id => "ratings_submit", :class => 'btn btn-primary' %>
<% end %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th class="<%= 'hilite bg-warning' if params[:sort] == 'title'%>" id="title_header"><%= sortable "title", "Title"%></th>
      <th>Rating</th>
      <th class="<%= 'hilite bg-warning' if params[:sort] == 'release_date'%>" id="release_date_header"><%= sortable "release_date", "Release Date"%></th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |mov| %>
      <tr>
        <td><%= mov.title %></td>
        <td><%= mov.rating %></td>
        <td><%= mov.release_date %></td>
        <td><%= link_to "More about #{mov.title}", movie_path(mov) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
