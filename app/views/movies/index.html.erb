<h2>All Movies</h2>

<%#  Part 1: Start here... %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th id="title_header"><%= sortable "title", "Title"%></th>
      <th>Rating</th>
      <th id="release_date_header"><%= sortable "release_date", "Release Date"%></th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |mov| %>
      <tr>
        <td><%= mov.title %></td>
        <td><%= mov.rating %></td>
        <td><%= mov.release_date %></td>
        <td><%= link_to "More about #{mov.title}", movie_path(mov) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
